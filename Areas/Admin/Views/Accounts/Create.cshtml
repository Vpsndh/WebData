@model WebData.Models.Account

@{
    ViewData["Title"] = "Thêm tài khoản mới";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Roles" asp-controller="Home" asp-action="Index">Quản Lý Thành viên</a></li>
        <li class="breadcrumb-item">Tạo Mới</li>
    </ol>
    <h6 class="slim-pagetitle">QUẢN LÝ THÀNH VIÊN</h6>
</div><!-- slim-pageheader -->

<div class="section-wrapper">
    <form asp-area="Admin" asp-controller="Roles" asp-action="Create" method="post">
    <div class="form-layout">
        <div class="row mg-b-25">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="form-control-label">Họ và tên: <span class="tx-danger">*</span></label>
                    <input class="form-control" type="text" asp-for="FullName">
                </div>
            </div><!-- col-4 -->
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="form-control-label">Cấp bậc: <span class="tx-danger">*</span></label>
                    <input class="form-control" type="text" asp-for="Rank" />
                </div>
            </div><!-- col-4 -->

        </div>
         <div class="row mg-b-25">
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="form-control-label">Tên đăng nhập: <span class="tx-danger">*</span></label>
                    <input class="form-control" type="text" asp-for="UserName">
                </div>
            </div><!-- col-4 -->
            <div class="col-lg-6">
                <div class="form-group">
                    <label class="form-control-label">Mật khẩu đăng nhập: <span class="tx-danger">*</span></label>
                    <input class="form-control" type="text" asp-for="Password" />
                </div>
            </div><!-- col-4 -->
             <div class="col-lg-6">
                <div class="form-group">
                    <label class="form-control-label">Phân quyền: <span class="tx-danger">*</span></label>
                    <select asp-for="RolesId" class ="form-control" asp-items="@ViewBag.RolesId"></select>
                </div>
            </div><!-- col-4 -->
        </div>
        <div class="form-layout-footer">
            <button class="btn btn-primary bd-0">Xác nhận</button>
            <button class="btn btn-secondary bd-0">Huỷ</button>
        </div><!-- form-layout-footer -->
    </div><!-- form-layout -->
    </form>
</div><!-- section-wrapper -->

