@model IEnumerable<WebData.Models.Account>
@{
    ViewData["Title"] = "Trang quản lý thành viên";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row page-titles">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Categories" asp-action="Index">Quản Lý Thành viên</a></li>
    </ol>

</div>

<div class="row">

    <div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-responsive-md">
                    <thead>
                        <tr>
                            <th><stong>HỌ VÀ TÊN</stong></th>
                            <th><strong>CẤP BẬC</strong></th>
                            <th><strong>TÊN ĐĂNG NHẬP</strong></th>
                            <th><strong>NGUỒN QUẢN LÝ</strong></th>
                            <th><strong></strong></th>
                        </tr>
                    </thead>
                    <tbody>
                            @if (Model != null && Model.Count() > 0)
                            {
                                foreach (var item in Model)
                                {
                                        <tr>
                                            <td>
                                            @Html.DisplayFor(modelItem => item.FullName)
                                            </td>

                                            <td>
                                            @Html.DisplayFor(modelItem => item.Rank)
                                            </td>

                                            <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                            </td>
                                            <td>

                                            </td>
                                            <td>
                                                 <div class="d-flex">
                                            <a asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fa fa-pencil"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                        </div>
                                            </td>
                                        </tr>
                                }
                            }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

</div>

