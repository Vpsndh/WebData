@model WebData.Areas.Admin.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminLogin.cshtml";
}
<form asp-area="Admin" asp-controller="Accounts" asp-action="Login" method="post">
    <div class="signin-wrapper">

        <div class="signin-box">
            <h2 class="slim-logo"><a href="/">ĐỘI K35<span>.</span></a></h2>
            <h2 class="signin-title-primary">Welcome Back!</h2>
            <h3 class="signin-title-secondary">Đăng nhập để tiếp tục.</h3>

            <div class="form-group">
                <input type="text" class="form-control" asp-for="UserN" placeholder="Tên đăng nhập">
            </div><!-- form-group -->
            <div class="form-group mg-b-50">
                <input type="password" class="form-control" asp-for="Passwd" placeholder="Enter your password">
            </div><!-- form-group -->
            <button class="btn btn-primary btn-block btn-signin">Đăng nhập</button>
            <p class="mg-b-0">@ViewBag.Error</p>
        </div><!-- signin-box -->

    </div><!-- signin-wrapper -->
</form>
