@model WebData.Models.Post

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<form asp-area="Admin" asp-controller="Posts" asp-action="Create" method="post">
    <div class="row">
        <div class="col-xl-4">
            <div class="row">
                <div class="card">
                    <div class="col-xl-12">

                        <div class="card-header">
                            <h4 class="card-title">Danh Mục tin:</h4>
                        </div>
                        <div class="card-body">
                            <select asp-for="CatId" class="default-select form-control wide" asp-items="@ViewBag.DanhMuc"></select>
                        </div>

                    </div>
                    <div class="col-xl-12">

                        <div class="card-header">
                            <h4 class="card-title">Số Báo Cáo Tin:</h4>
                        </div>
                        <div class="card-body">
                            <input type="text" class="form-control input-default " asp-for="SoBct">
                        </div>

                    </div>
                    <div class="col-xl-12">

                        <div class="card-header">
                            <h4 class="card-title">Ngày Soạn Thảo:</h4>
                        </div>
                        <div class="card-body">
                            <input type="date" class="form-control input-default " asp-for="CreateAt">
                        </div>

                    </div>

                    <div class="col-xl-12">

                        <div class="card-header">
                            <h4 class="card-title">Trường Hợp Thu Tin:</h4>
                        </div>
                        <div class="card-body">
                            <input type="text" class="form-control input-default " asp-for="TtthuTin">
                        </div>

                    </div>
                    <div class="col-xl-12">

                        <div class="card-header">
                            <h4 class="card-title">Nguồn:</h4>
                        </div>
                        <div class="card-body">
                            <input type="text" class="form-control input-default " asp-for="NguonBct">
                        </div>

                    </div>
                    <div class="col-xl-12">

                        <div class="card-header">
                            <h4 class="card-title">Từ Khóa:</h4>
                        </div>
                        <div class="card-body">
                            <input type="text" class="form-control input-default " asp-for="Keys" />
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-8">
            <div class="card">
                <div class="col-xl-12">

                    <div class="card-header">
                        <h4 class="card-title">Tiêu Đề:</h4>
                    </div>
                    <div class="card-body">
                        <input type="text" class="form-control input-default" asp-for="Title" />
                    </div>

                </div>
                <div class="col-xl-12">

                    <div class="card-header">
                        <h4 class="card-title">Nội Dung:</h4>
                    </div>
                    <div class="card-body">
                        <textarea class="form-control" style="height: 382px" asp-for="Contents"></textarea>
                    </div>
                <div class="col-xl-12">

                    <div class="card-header">
                        <h4 class="card-title">Nhận Xét:</h4>
                    </div>
                    <div class="card-body">
                            <textarea class="form-control" style="height: 170px" asp-for="NhanXet"></textarea>
                        </div>

                </div>
                <div class="col-lg-12">
                    <div class="mb-3">
                        <div style="text-align:center !important" class="form-layout-footer">
                            <button class="btn btn-primary bd-0">Đăng bài</button>
                        </div>

                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</form>

@section Script{
    <script src="/AdminCss/vendor/ckeditor/ckeditor.js"></script>
}

